<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="5dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_daftarList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="4dp"
        android:background="#F0EDFF"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingBottom="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/img_asmaulhusna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/asmaul_husna"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_no_asmaul_husna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/img_asmaulhusna"
                app:layout_constraintEnd_toEndOf="@id/img_asmaulhusna"
                app:layout_constraintStart_toStartOf="@id/img_asmaulhusna"
                app:layout_constraintTop_toTopOf="@id/img_asmaulhusna" />

            <TextView
                android:id="@+id/tv_asmaul_husna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Ar Rahman"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/img_asmaulhusna"
                app:layout_constraintStart_toEndOf="@+id/img_asmaulhusna"
                app:layout_constraintTop_toTopOf="@id/img_asmaulhusna" />

            <ImageButton
                android:id="@+id/btn_dropdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowdown"
                android:background="#00FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_asmaul_husna"
                app:layout_constraintBottom_toBottomOf="@id/tv_asmaul_husna"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_isiAsmaul"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="4dp"
        app:contentPaddingBottom="4dp"
        android:background="#F0EDFF"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingBottom="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/cv_daftarList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:visibility="gone"
            android:padding="10dp"
            android:paddingBottom="8dp">

        <TextView
            android:id="@+id/isi_asmaulHusna1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Makna :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/isi_asmaulHusnaMakna"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/asmaulpertama"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/isi_asmaulHusna1"
            app:layout_constraintStart_toStartOf="@id/isi_asmaulHusna1"
            app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>